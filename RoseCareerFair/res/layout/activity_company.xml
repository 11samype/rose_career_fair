<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    <ImageView 
        android:id="@+id/company_logo"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/r_logo"
        android:contentDescription="@string/company_logo"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter" />

    <TableRow
           android:id="@+id/tableRow1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal" >
    
	    <Button
	        android:id="@+id/button_about"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/about"
	        android:layout_gravity="center_horizontal" />
	    
	    <Button
	        android:id="@+id/button_notes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/notes"
	        android:layout_gravity="center_horizontal" />
    
   	</TableRow>
    	
    <Button
        android:id="@+id/button_wait_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_wait_time"
        android:layout_gravity="center_horizontal" />

    
    <TextView
        android:id="@+id/company_looking_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/looking_for"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:layout_gravity="center_horizontal" />
    
    <TextView
        android:id="@+id/company_work_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_gravity="center_horizontal" />
    
    <TextView
        android:id="@+id/company_major_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/majors"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />
    
    <TextView
        android:id="@+id/company_major_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
